@model EstudoModal.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Usuario</h4>
<hr />
<div class="modal fade" id="modalUsuario" tabindex="-1" role="dialog" aria-labelledby="modalUsuarioLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalUsuarioLabel">Novo Usuário</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @await Component.InvokeAsync("CreateUsuario")
            </div>
        </div>
    </div>
</div>

<button class="btn btn-primary" data-toggle="modal" data-target="#modalUsuario">
    Novo Usuário
</button>

<div class="alert alert-success" role="alert" style="display:none;">
    Formulário enviado com sucesso!
</div>

